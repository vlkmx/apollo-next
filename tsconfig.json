{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "ES2017",
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
